extends layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Add Book and Retrieve QR Code.

  form(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label(class='col-md-2 col-form-label font-weight-bold', for='name') Name
      .col-md-8
        input.form-control(type='text', name='name', id='name', autocomplete='name', autofocus=true, placeholder="Black Clover")
    .form-group.row#tag-row-class
      label(class='col-md-2 col-form-label font-weight-bold', for='email') Tags
      .col-md-8
        input.form-control(type='text', name='tags', id='tags', autocomplete='tags', placeholder="action,fantasy")
    .form-group
      .offset-md-2.col-md-8.p-1
        button.btn.btn-primary(type='submit')
          i.far.fa-envelope.fa-sm
          | Send

